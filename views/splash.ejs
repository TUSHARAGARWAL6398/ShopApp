<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Splash Screen</title>
    <style>
      body {
        background: rgb(0, 123, 255);
        margin: 0;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }

      .splash-text {
        font-size: 24px;
        opacity: 0;
        transition: opacity 1s ease-in-out;
        color: white;
      }

      .animate-fade {
        opacity: 1;
      }

      @media (max-width: 770px) {
        .splash-text {
          font-size: 20px;
        }
      }

      @media (max-width: 480px) {
        .splash-text {
          font-size: 16px;
        }
      }
    </style>
  </head>

  <body>
    <div class="splash-text animate-fade">
      <!-- Splash screen content -->
      <img
        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRS605Dfpy4LoJmpX7MMKQGBVpGn-UlJ4iXPDrzfT01Rz7wzwSpNP0d8HWXZA&s"
        alt=""
        srcset=""
      />
      <h1>ShopApp</h1>
    </div>

    <script>
      // Add a timeout to remove the animation class and redirect to your main page
      setTimeout(function () {
        const splashText = document.querySelector(".splash-text");
        splashText.classList.remove("animate-fade"); // Remove the animation class to fade out
        setTimeout(function () {
          window.location.href = "/products"; // Replace "homePage.html" with the actual URL of your main page
        }, 800); // Adjust the timeout (in milliseconds) as needed to match the animation duration
      }, 2000); // Adjust the initial timeout (in milliseconds) as needed
    </script>
  </body>
</html>
